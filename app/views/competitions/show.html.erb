<div class="row">
  <div class="col-xs-12 col-md-12">
    <img src="http://dummyimage.com/1170x300/000/fff/">
    <%#= image_tag @campaign.enter_image %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@entry, :url => 'entry', :action => 'new_entry', :html => {:role => 'form'}) do |f| %>
        <%= f.hidden_field :competition_id, :value => @campaign.id %>
        <div class="col-xs-12 col-md-6">
          <div class="form-group">
            <%= f.label :firstname, 'First Name' %>
            <%= f.text_field :firstname, :class => 'form-control', :placeholder => 'Your First Name*', :required => 'required' %>
          </div>
          <div class="form-group">
            <%= f.label :surname, 'Last Name' %>
            <%= f.text_field :surname, :class => 'form-control', :placeholder => 'Your Last Name*', :required => 'required' %>
          </div>
          <div class="form-group col-md-8 form--no-padding form--no-margin">
            <%= f.label :dob, 'Birthday', :class => 'col-md-12 form--no-padding' %>
            <%= f.date_select :dob, {:start_year => 1942, :end_year => 2013 - 18, :order => [:day, :month, :year], :include_blank => false}, {:class => 'form-control--date col-xs-12 col-sm-12 col-md-3'} %>
          </div>
          <div class="form-group  col-md-4 form--no-padding form--no-margin">
            <%= f.label :gender, 'Gender' %>
            <%= select_tag 'entry[gender]' , options_for_select([["Female",2],["Male",1]]), :class => 'form-control' %>
          </div>
        </div>

        <div class="col-xs-12 col-md-6">
          <div class="form-group">
            <%= f.label :email, 'email Address' %>
            <%= f.text_field :email, :class => 'form-control', :placeholder => 'Your email Address*', :required => 'required' %>
          </div>
          <div class="form-group">
            <%= f.label :mobile, 'Cellphone No.' %>
            <%= f.text_field :mobile, :class => 'form-control', :placeholder => 'Your Cellphone Number'%>
          </div>
          <div class="form-group">
            <%= f.label :region, 'Province' %>
            <%= select_tag 'entry[region]' , options_for_select(selRegion.map{|region| [region['name'], region['id']]}), :class => 'form-control' %>
          </div>
        </div>
        <div class="col-xs-12 col-md-6">
          <% if @campaign.has_kids %>
              <div class="form-group">
                <%= f.label :q1, 'Do you have dependents under 16?*' %>
                <%= f.check_box :q1%>
              </div>
          <% end %>
        </div>
        <div class="col-xs-12 col-md-6">
           <% if @campaign.likes_sports %>
              <div class="form-group">
                <%= f.label :q2, 'Are you interested in Sports?*' %>
                <%= f.check_box :q2%>
              </div>
          <% end %>
        </div>

        <div class="col-xs-12 col-md-12">
          <div class="form-group">
            <%= f.label :newsletter, 'I would like to receive style updates, new arrivals and special offers from Zando' %>
            <%= f.check_box :newsletter,  {checked: true}%>
          </div>
        </div>
        <div class="col-xs-12 col-md-4">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
        <div class="col-xs-12 col-md-4">
          <small>* denotes required fields</small>
        </div>
  <% end %>
  </div>
</div>
