<div class="login-title row">
Blair Login

</div>
<div class="row">
  <%= render 'layouts/messages' %>
  <div class="login col-sm-offset-2">
    <%= form_tag( {:controller => 'sessions' , :action => 'new'}, :class => 'form-horizontal', :role => 'form' ) do %>
        <div class="form-group">
          <%= label_tag(:email , nil, :class => 'col-sm-2 control-label') %>
          <div class="col-sm-6">
            <%= text_field_tag(:email , nil , :class => 'form-control') %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag(:password , nil , :class => 'col-sm-2 control-label') %>
          <div class="col-sm-6">
            <%= password_field_tag(:password , nil , :class => 'form-control') %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-6">
            <%= submit_tag("Log In", { :class => 'btn btn-default'}) %>
          </div>
        </div>
    <% end %>
  </div>
</div>
